@using AMS.Models.Profile
@model AbsenceVM

<input asp-for="StaffIde" type="hidden" />
<div class="d-flex justify-content-start align-items-center my-5">
    <h3 class="card-title font-weight-bolder text-dark-75 text-hover-primary font-size-h4 m-0">@Resource.ListOfAbsences</h3>
</div>
<table id="tbl_absence" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>@Resource.Date</th>
            <th>@Resource.AbsentType</th>
            <th>@Resource.Description</th>
            <th class="text-center" data-orderable="false">@Resource.Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script>
    $(document).ready(function () {
        render_attendance_tbl(@Json.Serialize(Model.Absences));
    });

    function render_attendance_tbl(data) {
        var row_c = 1;
        var has_claim_edit = '@User.HasClaim("8", "e")' == 'True' ? true : false;

        $('#tbl_absence').DataTable({
            destroy: true,
            language: {
                url: `/Culture/DataTable/${culture}.json`
            },
            keys: true,
            responsive: true,
            pageLength: 20,
            data: data,
            deferRender: true,
            columnDefs: [
                { width: "5%", targets: [0, 4] },
                { width: "20%", targets: [1, 2] },
                { width: "55%", targets: [3] },
                { className: "text-center button-td", targets: [4] },
                { defaultContent: "///", targets: "_all" },
                { visible: has_claim_edit, targets: [4] }
            ],
            order: [[0, "asc"]],
            columns: [
                {
                    data: function (data, type, row, meta) {
                        row_c++;
                        return meta.row + 1;
                    }
                },
                {
                    data: function (row, type, set) {
                        return moment(row.insertedDate).format('DD/MM/YYYY');
                    }
                },
                { data: "absenceType" },
                {
                    data: function (row, type, set) {
                        var desc = '///';
                        if (row.description != null) {
                            if (row.description.length > 80) {
                                desc = row.description.substring(0, 80) + '<span class="load-more" onclick="load_more(this)"><b>.. <a href="#' + row_c + '">@Html.Raw(Resource.LookMore)</a></b></span><span class="d-none load-less-fst">' + row.description.substring(80) + '<span class="d-none load-less-snd" onclick="load_less(this)"><b> <a href="#' + row_c + '">@Html.Raw(Resource.LookLess)</a></b></span></span>';
                            } else {
                                desc = row.description ?? "///";
                            }
                        }
                        return desc;
                    }
                },
                {
                    data: function (row, type, set) {
                        var dropdown = '<div class="dropdown dropleft cursor-pointer">' +
                            '<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">@Resource.Actions</button>' +
                            '<div class="dropdown-menu" role="menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 29px, 0px); top: 0px; left: 0px; will-change: transform;">' +
                            '<button type="button" class="dropdown-item cursor-pointer" onclick="edit_absence(\'' + row.staffAttendanceIde + '\')">@Html.Raw(ActionButton.Edit.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.Edit</span></button>' +
                            '</div></div>';
                        return dropdown;
                    }
                }
            ]
        });
    }

    function edit_absence(ide) {
        $('#modal-large').find('.modal-content').load('@Url.Action("StaffAbsence", "Attendance")?ide=' + ide, function () {
            $('#modal-large').modal('toggle');
        });
    }
</script>
