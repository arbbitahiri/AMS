@using AMS.Models.Profile
@model AttendanceVM
@{
}
<input asp-for="StaffIde" type="hidden" />
<div class="d-flex justify-content-start align-items-center my-5">
    <h3 class="card-title font-weight-bolder text-dark-75 text-hover-primary font-size-h4 m-0">@Resource.AttendanceList</h3>
</div>
<table id="tbl_attendance" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>@Resource.StartDate</th>
            <th>@Resource.EndDate</th>
            <th>@Resource.ConsecutiveDays</th>
            <th class="text-center" data-orderable="false">@Resource.Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script>
    $(document).ready(function() {
        render_attendance_tbl(@Json.Serialize(Model.Attendances));
    });

    function render_attendance_tbl(data) {
        $('#tbl_attendance').DataTable({
            destroy: true,
            language: {
                url: `/Culture/DataTable/${culture}.json`
            },
            keys: true,
            responsive: true,
            pageLength: 20,
            data: data,
            deferRender: true,
            columnDefs: [
                { width: "5%", targets: [0, 4] },
                { className: "text-center button-td", targets: [4] },
                { defaultContent: "///", targets: "_all" }
            ],
            order: [[0, "asc"]],
            columns: [
                {
                    data: function (data, type, row, meta) {
                        return meta.row + meta.settings._iDisplayStart + 1;
                    }
                },
                {
                    data: function (row, type, set) {
                        return moment(row.startDate).format('DD/MM/YYYY');
                    }
                },
                {
                    data: function (row, type, set) {
                        return moment(row.endDate).format('DD/MM/YYYY');
                    }
                },
                { data: "workingSince" },
                {
                    data: function (row, type, set) {
                        var dropdown = '<div class="dropdown dropleft cursor-pointer">' +
                            '<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">@Resource.Actions</button>' +
                            '<div class="dropdown-menu" role="menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 29px, 0px); top: 0px; left: 0px; will-change: transform;">' +
                            '<button type="button" class="dropdown-item cursor-pointer" onclick="history(\'' + row.startDate + '\', \'' + row.endDate + '\')">@Html.Raw(ActionButton.History.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.History</span></button>' +
                            '</div></div>';
                        return dropdown;
                    }
                }
            ]
        });
    }

    function history(start_date, end_date) {
        $('#modal-large').find('.modal-content').load('@Url.Action("History", "Attendance")?ide=@Model.StaffIde&startDate=' + start_date + '&endDate=' + end_date, function () {
            $('#modal-large').modal('toggle');
        });
    }
</script>
