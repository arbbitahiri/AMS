@using AMS.Models.Staff
@model Search
@inject IDDLRepository repo
@{
    UserModel user = (UserModel)ViewData["User"];
    var role = User.Claims.FirstOrDefault(a => a.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role");

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Resource.StaffList;
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <h3 class="card-title">@Resource.SearchParameters</h3>
    </div>
    <div class="card-body">
        <form asp-action="Search" asp-controller="Staff" method="post" id="frm_search_staff" data-ajax="true" data-ajax-success="search_staff">
            @Html.AntiForgeryToken()
            @Html.Hidden("reportType")

            <div class="row">
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 form-group">
                    <label asp-for="Department">@Resource.Department</label>
                    <select asp-for="Department" asp-items="await repo.Departments(user.Language)" class="form-control select2">>
                        <option value="">@Resource.Choose</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 form-group">
                    <label asp-for="StaffType">@Resource.StaffType</label>
                    <select asp-for="StaffType" asp-items="await repo.StaffTypes(user.Language)" class="form-control select2">
                        <option value="">@Resource.Choose</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 form-group">
                    <label asp-for="PersonalNumber">@Resource.PersonalNumber</label>
                    <input asp-for="PersonalNumber" type="text" class="form-control"/>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 form-group">
                    <label asp-for="Firstname">@Resource.Firstname</label>
                    <input asp-for="Firstname" type="text" class="form-control"/>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 col-md-3 col-lg-3 form-group">
                    <label asp-for="Lastname">@Resource.Lastname</label>
                    <input asp-for="Lastname" type="text" class="form-control"/>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="col-12 col-sm-6 col-md-3 col-lg-3 form-group">
                    <label class="invisible">\\</label><br />
                    <input type="button" class="btn btn-block btn-primary" onclick="$('#frm_search_staff').submit()" value="@Resource.Search" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card card-custom gutter-b" id="kt_staff_search">
    <div class="card-header">
        <h3 class="card-title mb-0">@Resource.SearchResult</h3>
        <div class="card-toolbar">
            <div class="btn-group dropleft">
                <button type="button" class="btn btn-primary font-weight-bold btn-md dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Resource.Download</button>
                <div class="dropdown-menu dropdown-menu-sm p-0" role="menu">
                    <div class="d-flex">
                        <button class="dropdown-item d-flex flex-column" type="button" onclick="get_report(ReportType.PDF)">
                            <img src="~/media/extensions/pdf.png" class="btn-download" asp-append-version="true" />
                            <span class="title text-center w-100">PDF</span>
                        </button>
                        <button class="dropdown-item d-flex flex-column" type="button" onclick="get_report(ReportType.EXCEL)">
                            <img src="~/media/extensions/xls.png" class="btn-download" asp-append-version="true" />
                            <span class="title text-center w-100">Excel</span>
                        </button>
                    </div>
                    <div class="d-flex">
                        <button class="dropdown-item d-flex flex-column" type="button" onclick="get_report(ReportType.WORD)">
                            <img src="~/media/extensions/doc.png" class="btn-download" asp-append-version="true" />
                            <span class="title text-center w-100">Word</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="tbl_staff" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@Resource.Name</th>
                    <th>@Resource.Birthdate</th>
                    <th>@Resource.StaffType</th>
                    <th>@Resource.Gender</th>
                    <th>@Resource.Email</th>
                    <th>@Resource.PhoneNumber</th>
                    <th data-orderable="false">@Resource.Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<div class="card card-custom card-collapse" id="kt_in_process">
    <div class="card-header">
        <h3 class="card-title">@Resource.ListOfStaffInProcessRegistration</h3>
        <div class="card-toolbar">
            <button type="button" class="btn btn-icon btn-sm btn-hover-light-primary mr-1" data-card-tool="toggle" data-toggle="tooltip" data-placement="top" title="Toggle Card"><i class="ki ki-arrow-down icon-nm"></i></button>
            <button type="button" class="btn btn-icon btn-sm btn-hover-light-primary mr-1" data-card-tool="reload" data-toggle="tooltip" data-placement="top" title="Toggle Card"><i class="ki ki-reload icon-nm"></i></button>
        </div>
    </div>
    <div class="card-body" id="kt_load_tbl" style="display: none; overflow: hidden; padding-top: 0px; padding-bottom: 0px;">
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
            $(".select2").select2({
                width: "100%",
                language: {
                    noResults: function () {
                        return '@Html.Raw(Resource.NoResultsFound)';
                    },
                }
            });

            var card = new KTCard('kt_in_process');
            card.on('afterExpand', function (card) {
                $('#kt_load_tbl').load('@Url.Action("InProcess", "Staff")');
            });

            card.on('reload', function (card) {
                KTApp.block(card.getSelf(), {
                    overlayColor: '#ffffff',
                    type: 'loader',
                    state: 'primary',
                    opacity: 0.3,
                    size: 'lg'
                });

                $('#kt_load_tbl').load('@Url.Action("InProcess", "Staff")');

                setTimeout(function () {
                    KTApp.unblock(card.getSelf());
                }, 2000);
            });

            $('#frm_search_staff').submit();
        });

        function search_staff(data) {
            $('#kt_staff_search').slideDown(500);
            $("#tbl_staff").DataTable({
                destroy: true,
                language: {
                    url: `/Culture/DataTable/${culture}.json`
                },
                keys: true,
                responsive: true,
                pageLength: 10,
                data: data,
                columnDefs: [
                    { targets: [7], className: "button-td text-center" },
                    { targets: [0, 7], width: "5%" },
                    { targets: [2, 3, 4, 5, 6], width: "15%" },
                    { targets: [1], width: "20%" },
                    { targets: "_all", defaultContent: "///" }
                ],
                order: [[ 0, 'asc' ]],
                columns: [
                    {
                        data: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        data: function (row, type, set) {
                            var name = '<div class="d-flex align-items-center">' +
                                '<div class="ml-2">' +
                                '<div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + row.firstname + ' ' + row.lastname + '</div>' +
                                '<div class="text-muted font-weight-bold text-hover-primary">' + row.personalNumber + '</div>' +
                                '</div></div>';
                            return name;
                        }
                    },
                    {
                        data: function (row, type, set) {
                            return moment(row.birthDate).format('DD/MM/YYYY');
                        }
                    },
                    { data: "staffType" },
                    { data: "gender" },
                    { data: "email" },
                    {
                        data: function (row, type, set) {
                            if (row.phoneNumber != null && row.phoneNumber != "") {
                                return `+${row.phoneNumber}`;
                            } else {
                                return '///';
                            }
                        }
                    },
                    {
                        data: function (row, type, set) {
                            var dropdown = '<div class="dropdown dropleft cursor-pointer">' +
                                '<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">@Resource.Actions</button>' +
                                '<div class="dropdown-menu" role="menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 29px, 0px); top: 0px; left: 0px; will-change: transform;">' +
                                '<button type="button" class="dropdown-item cursor-pointer" onclick="staff_profile(\'' + row.ide + '\')">@Html.Raw(ActionButton.Profile.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.Profile</span></button>' +
                                '<button type="button" class="dropdown-item cursor-pointer" onclick="edit_staff(\'' + row.ide + '\')">@Html.Raw(ActionButton.Edit.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.Edit</span></button>' +
                                '</div></div>';
                            return dropdown;
                        }
                    }
                ]
            });
        }

        function staff_profile(ide) {
            window.location.href = '@Url.Action("Index", "Profile")?ide=' + ide;
        }

        function edit_staff(ide) {
            window.location.href = '@Url.Action("Register", "Staff")?ide=' + ide;
        }

        function get_report(type) {
            $('#frm_search_staff').attr('data-ajax', false);
            $('#frm_search_staff').attr('action', '@Url.Action("Report", "Staff")');
            $('#frm_search_staff').attr('target', '_blank');
            $('#frm_search_staff').addClass('noLoading');
            $('#reportType').val(type);
            $('#frm_search_staff').submit();
            $('#frm_search_staff').attr('data-ajax', true);
            $('#frm_search_staff').attr('action', '@Url.Action("Search", "Staff")');
            $('#frm_search_staff').removeAttr('target');
            $('#frm_search_staff').removeClass('noLoading');
        }
    </script>
}