@using AMS.Models.StaffDepartment
@model Search
@inject IDDLRepository repo
@{
    UserModel user = (UserModel)ViewData["User"];
    var role = User.Claims.FirstOrDefault(a => a.Type == "http://schemas.microsoft.com/ws/2008/06/identity/claims/role");

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Resource.StaffList;
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <h3 class="card-title">@Resource.SearchParameters</h3>
        <div class="card-toolbar">
            <input type="checkbox" onchange="change_advanced(this)" id="kt_advance" />
            <label for="kt_advance" class="m-0">@Resource.AdvancedSearch</label>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Search" asp-controller="StaffDepartment" method="post" id="frm_search_staff" data-ajax="true" data-ajax-success="search_staff">
            @Html.AntiForgeryToken()
            <input asp-for="AdvancedSearch" type="hidden" value="false"/>
            <input id="reportType" name="reportType" type="hidden" />

            <div class="row">
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group">
                    <label asp-for="DepartmentId">@Resource.Department</label>
                    <select asp-for="DepartmentId" asp-items="await repo.Departments(user.Language)" class="form-control select2">>
                        <option value="">@Resource.Choose</option>
                    </select>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group">
                    <label asp-for="StaffTypeId">@Resource.StaffType</label>
                    <select asp-for="StaffTypeId" asp-items="await repo.StaffTypes(user.Language)" class="form-control select2">
                        <option value="">@Resource.Choose</option>
                    </select>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group">
                    <label asp-for="StartDate">@Resource.StartDate</label>
                    <div class="input-group date">
                        <input asp-for="StartDate" type="text" placeholder="dd/MM/yyyy" class="form-control" autocomplete="off" />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="la la-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group">
                    <label asp-for="EndDate">@Resource.EndDate</label>
                    <div class="input-group date">
                        <input asp-for="EndDate" type="text" placeholder="dd/MM/yyyy" class="form-control" autocomplete="off" />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="la la-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group advance" style="display: none;">
                    <label asp-for="PersonalNumber">@Resource.PersonalNumber</label>
                    <input asp-for="PersonalNumber" type="text" class="form-control" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group advance" style="display: none;">
                    <label asp-for="FirstName">@Resource.Firstname</label>
                    <input asp-for="FirstName" type="text" class="form-control" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group advance" style="display: none;">
                    <label asp-for="LastName">@Resource.Lastname</label>
                    <input asp-for="LastName" type="text" class="form-control" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group advance" style="display: none;">
                    <label asp-for="BirthDate">@Resource.Birthdate</label>
                    <div class="input-group date">
                        <input asp-for="BirthDate" type="text" placeholder="dd/MM/yyyy" class="form-control" autocomplete="off" />
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="la la-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group advance" style="display: none;">
                    <label asp-for="StatusTypeId">@Resource.StatusType</label>
                    <select asp-for="StatusTypeId" asp-items="await repo.StatusTypes(user.Language, true)" class="form-control select2">
                        <option value="">@Resource.Choose</option>
                    </select>
                </div>

                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group">
                    <label class="invisible">\\</label><br />
                    <input type="submit" class="btn btn-block btn-primary" value="@Resource.Search" />
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 form-group">
                    <label class="invisible">//</label>
                    <button type="button" id="btn_clear" class="btn btn-secondary btn-block">@Resource.Clear</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card card-custom gutter-b d-none" id="kt_staff_search">
    <div class="card-header">
        <h3 class="card-title mb-0">@Resource.SearchResult</h3>
        <div class="card-toolbar d-none" id="kt_download">
            <div class="btn-group dropleft">
                <button type="button" class="btn btn-primary font-weight-bold btn-md dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Resource.Download</button>
                <div class="dropdown-menu dropdown-menu-sm p-0" role="menu">
                    <div class="d-flex">
                        <button class="dropdown-item d-flex flex-column" type="button" onclick="get_report(ReportType.PDF)">
                            <img src="~/media/extensions/pdf.png" class="btn-download" asp-append-version="true" />
                            <span class="title text-center w-100">PDF</span>
                        </button>
                        <button class="dropdown-item d-flex flex-column" type="button" onclick="get_report(ReportType.EXCEL)">
                            <img src="~/media/extensions/xls.png" class="btn-download" asp-append-version="true" />
                            <span class="title text-center w-100">Excel</span>
                        </button>
                    </div>
                    <div class="d-flex">
                        <button class="dropdown-item d-flex flex-column" type="button" onclick="get_report(ReportType.WORD)">
                            <img src="~/media/extensions/doc.png" class="btn-download" asp-append-version="true" />
                            <span class="title text-center w-100">Word</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="tbl_staff" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th class="text-center">#</th>
                    <th>@Resource.Name</th>
                    <th>@Resource.Birthdate</th>
                    <th>@Resource.Department</th>
                    <th>@Resource.StaffType</th>
                    <th>@Resource.StartDate</th>
                    <th>@Resource.EndDate</th>
                    <th>@Resource.StatusType</th>
                    <th class="text-center" data-orderable="false">@Resource.Actions</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".select2").select2({
                width: "100%",
                language: {
                    noResults: function () {
                        return '@Html.Raw(Resource.NoResultsFound)';
                    },
                }
            });

            $("#StartDate").datepicker({
                language: cultureShort,
                rtl: KTUtil.isRTL(),
                todayBtn: "linked",
                todayHighlight: true,
                templates: arrows,
                autoclose: true,
                orientation: "bottom",
                format: 'dd/mm/yyyy'
            }).inputmask("mask", {
                mask: "99/99/9999",
                placeholder: "dd/MM/yyyy"
            });

            $("#EndDate").datepicker({
                language: cultureShort,
                rtl: KTUtil.isRTL(),
                todayBtn: "linked",
                todayHighlight: true,
                templates: arrows,
                autoclose: true,
                orientation: "bottom",
                format: 'dd/mm/yyyy'
            }).inputmask("mask", {
                mask: "99/99/9999",
                placeholder: "dd/MM/yyyy"
            });

            $("#BirthDate").datepicker({
                language: cultureShort,
                rtl: KTUtil.isRTL(),
                todayBtn: "linked",
                todayHighlight: true,
                templates: arrows,
                autoclose: true,
                orientation: "bottom",
                format: 'dd/mm/yyyy'
            }).inputmask("mask", {
                mask: "99/99/9999",
                placeholder: "dd/MM/yyyy"
            });

            $('#btn_clear').on('click', function () {
                $('#frm_search_staff').trigger("reset");
                $('form select').each(function () {
                    $(this).val('').change();
                });
            });

            $('#frm_search_staff').submit();
        });

        function change_advanced(e) {
            $('.advance').toggle(250);

            clear_fields();
            if ($(e).is(':checked')) {
                $('#AdvancedSearch').val(true);
            } else {
                $('#AdvancedSearch').val(false);
            }
        }

        function clear_fields() {
            $("#FirstName, #FirstName, #LastName, #BirthDate, #StatusTypeId").val("").change();
        }

        function search_staff(data) {
            if (data.length > 0) {
                $('#kt_download').removeClass('d-none');
            }
            $('#kt_staff_search').removeClass('d-none');
            $("#tbl_staff").DataTable({
                destroy: true,
                language: {
                    url: `/Culture/DataTable/${culture}.json`
                },
                keys: true,
                responsive: true,
                pageLength: 10,
                data: data,
                columnDefs: [
                    { targets: [0, 8], searchable: false },
                    { targets: [8], className: "button-td text-center" },
                    { targets: [0, 8], width: "5%" },
                    { targets: [1], width: "15%" },
                    { targets: "_all", defaultContent: "///" }
                ],
                order: [[0, 'asc']],
                columns: [
                    {
                        data: function (data, type, row, meta) {
                            return meta.row + 1;
                        }
                    },
                    {
                        data: function (row, type, set) {
                            var name = '<div class="d-flex align-items-center">' +
                                '<div class="ml-2">' +
                                '<div class="text-dark-75 font-weight-bolder font-size-lg mb-0">' + row.firstName + ' ' + row.lastName + '</div>' +
                                '<div class="text-muted font-weight-bold text-hover-primary">' + row.personalNumber + '</div>' +
                                '</div></div>';
                            return name;
                        }
                    },
                    {
                        data: function (row, type, set) {
                            return moment(row.dateOfBirth).format('DD/MM/YYYY');
                        }
                    },
                    { data: "department" },
                    { data: "staffType" },
                    {
                        data: function (row, type, set) {
                            return moment(row.startDate).format('DD/MM/YYYY');
                        }
                    },
                    {
                        data: function (row, type, set) {
                            return moment(row.endDate).format('DD/MM/YYYY');
                        }
                    },
                    { data: "status" },
                    {
                        data: function (row, type, set) {
                            var dropdown = '<div class="dropdown dropleft cursor-pointer">' +
                                '<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown">@Resource.Actions</button>' +
                                '<div class="dropdown-menu" role="menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 29px, 0px); top: 0px; left: 0px; will-change: transform;">' +
                                '<button type="button" class="dropdown-item cursor-pointer" onclick="staff_profile(\'' + row.staffIde + '\')">@Html.Raw(ActionButton.Profile.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.Profile</span></button>' +
                                '<button type="button" class="dropdown-item cursor-pointer" onclick="edit_staff(\'' + row.staffDepartmentIde + '\')">@Html.Raw(ActionButton.Plus.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.Add</span></button>' +
                                '</div></div>';
                            return dropdown;
                        }
                    }
                ]
            });
        }

        function staff_profile(ide) {
            window.location.href = '@Url.Action("Index", "Profile")?ide=' + ide;
        }

        function edit_staff(ide) {
            $('#modal-large').find('.modal-content').load('@Url.Action("_AddStaff", "StaffDepartment")?ide=' + ide, function () {
                $('#modal-large').modal('toggle');
            });
        }

        function get_report(type) {
            $('#frm_search_staff').attr('data-ajax', false);
            $('#frm_search_staff').attr('action', '@Url.Action("Report", "StaffDepartment")');
            $('#frm_search_staff').attr('target', '_blank');
            $('#frm_search_staff').addClass('no-loading');
            $('#reportType').val(type);
            $('#frm_search_staff').submit();
            $('#frm_search_staff').attr('data-ajax', true);
            $('#frm_search_staff').attr('action', '@Url.Action("Search", "StaffDepartment")');
            $('#frm_search_staff').removeAttr('target');
            $('#frm_search_staff').removeClass('no-loading');
        }
    </script>
}