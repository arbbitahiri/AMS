@using AMS.Models.Attendance
@model AttendanceDetails

<div class="modal-header">
    <h5 class="modal-title">@Resource.AttendanceHistory @Resource.For.ToLower() @Model.Name</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>

<div class="modal-body mb-5">
    @Html.AntiForgeryToken()
    <input asp-for="StaffIde" type="hidden"/>
    <input asp-for="StartDate" type="hidden"/>
    <input asp-for="EndDate" type="hidden"/>

    <table id="tbl_attendance_history" class="table table-striped table-bordered w-100 table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>@Resource.Date</th>
                <th>@Resource.BeenAbsent</th>
                <th class="text-center" data-orderable="false">@Resource.Actions</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<div class="modal-footer modal-footer-uniform w-full justify-content-between">
    <button type="button" class="btn btn-bold btn-pure btn-secondary" data-bs-dismiss="modal">@Resource.Close</button>
</div>

<script>
    $(document).ready(function () {
        render_attendances_tbl(@Json.Serialize(Model.AttendanceList))
    });

    function render_attendances_tbl(data) {
        $('#tbl_attendance_history').DataTable({
            language: {
                url: `/Culture/DataTable/${culture}.json`
            },
            keys: true,
            responsive: true,
            data: data,
            pageLength: 10,
            order: [[0, "asc"]],
            columnDefs: [
                { targets: [0, 3], width: '5%' },
                { targets: [1], width: '50%' },
                { targets: [2], width: '40%' },
                { targets: [3], className: 'button-td text-center' }
            ],
            columns: [
                {
                    data: function (data, type, row, meta) {
                        return meta.row + meta.settings._iDisplayStart + 1;
                    }
                },
                {
                    data: function (row, type, set) {
                        return moment(row.date).format('DD/MM/YYYY');
                    }
                },
                { data: "absent" },
                {
                    data: function (row, type, set) {
                        var dropdown = '<div class="dropdown dropleft cursor-pointer">' +
                            '<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@Resource.Actions</button>' +
                            '<div class="dropdown-menu dropdown-grid" role="menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 29px, 0px); top: 0px; left: 0px; will-change: transform;">';
                        if (!row.attended) {
                            dropdown += '<button class="dropdown-item cursor-pointer" type="button" onclick="details(\'' + row.staffAttendanceIde + '\')">@Html.Raw(ActionButton.Details.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Resource.Details</span></button>';
                        }
                        dropdown += '</div></div>';
                        return dropdown;
                    }
                }
            ]
        });
    }

    function details(ide) {
        $('#modal-large').find('.modal-content').load('@Url.Action("StaffAttendance", "Attendance")?ide=' + ide + '&sIde=' + $('#StaffIde').val() + '&startDate=' + $('#StartDate').val() + '&endDate=' + $('#EndDate').val(), function () {
            $('#modal-large').modal('show');
        });
    }
</script>