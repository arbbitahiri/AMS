@model ErrorViewModel
@{
    ViewData["Title"] = "System error!";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Resource.SystemError - AMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />

    <link rel="stylesheet" asp-append-version="true" href="~/assets2/css/pages/error/error-6.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/assets2/css/style.bundle.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/assets2/plugins/global/plugins.bundle.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/assets2/plugins/custom/prismjs/prismjs.bundle.css" />
</head>

<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <div class="d-flex flex-column flex-root">
        <div class="error error-6 d-flex flex-row-fluid bgi-size-cover bgi-position-center" style="background-image: url(/assets2/media/error/bg6.jpg);">
            <div class="d-flex flex-column flex-row-fluid text-center">
                <h1 class="error-title font-weight-boldest text-white mb-12" style="margin-top: 12rem; font-size: 8rem !important;">@Resource.SystemError</h1>
                <p class="display-4 font-weight-bold text-white">@Resource.ThereHasBeenSystemError<br />@Resource.PleaseTryAgainLater</p>
                <div class="mt-15">
                    <a href="/Home/Index" class="btn btn-warning btn-lg font-size-h3 font-weight-bold mr-2 shadow">@Resource.GoHome</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
