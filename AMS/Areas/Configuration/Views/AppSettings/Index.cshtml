@using AMS.Areas.Configuration.Models.AppSettings
@model IEnumerable<ApplicationSettings>

<div class="card card-custom gutter-b">
    <div class="card-header">
        <h3 class="card-title">@Resource.ListOfAppSettings</h3>
    </div>
    <div class="card-body">
        <table id="tbl_appsettings" class="table table-striped table-bordered w-100 table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>@Resource.Field</th>
                    <th>@Resource.Key</th>
                    <th>@Resource.Value</th>
                    <th class="text-center" data-orderable="false">@Resource.Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="modal modal-right fade" id="mdl_edit" tabindex="-1" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Resource.Edit</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="_Edit" asp-controller="AppSettings" asp-area="Configuration" id="frm_EditAppSettings" class="no-loading" method="post" data-ajax="true" data-ajax-method="post" role="form">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="required">@Resource.Field</label>
                            <input name="Region" id="Region" disabled="disabled" class="form-control" />
                        </div>
                        <div class="col-md-12 form-group">
                            <label class="required">@Resource.Key</label>
                            <input name="Key" id="Key" disabled="disabled" class="form-control" />
                        </div>
                        <div class="col-md-12 form-group">
                            <label class="required">@Resource.Value</label>
                            <textarea name="Value" id="Value" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer modal-footer-uniform w-full justify-content-between">
                <button type="button" class="btn btn-bold btn-pure btn-secondary" data-bs-dismiss="modal">@Resource.Close</button>
                <button type="button" onclick="save_changes()" class="btn btn-bold btn-pure btn-primary float-right">@Resource.Edit</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            render_Tbl(@Json.Serialize(Model));
        });

        function render_Tbl(data) {
            $('#tbl_appsettings').DataTable({
                language: {
                    url: `/Culture/DataTable/${culture}.json`
                },
                keys: true,
                responsive: true,
                data: data,
                order: [[0, "asc"]],
                columnDefs: [
                    { targets: [0, 4], width: '5%' },
                    { targets: [0, 4], searchable: false },
                    { targets: [4], className: 'button-td text-center' }
                ],
                columns: [
                    {
                        data: function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { data: "region" },
                    { data: "key" },
                    {
                        data: function (row, type, set) {
                            if (row.value != '') {
                                return row.value;
                            } else {
                                return "///";
                            }
                        }
                    },
                    {
                        data: function (row, type, set) {
                            return '<div class="dropdown dropleft cursor-pointer">' +
                                '<button type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@Resource.Actions</button>' +
                                '<div class="dropdown-menu dropdown-grid" role="menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 29px, 0px); top: 0px; left: 0px; will-change: transform;">' +
                                '<button class="dropdown-item cursor-pointer" type="button" onclick="edit(\'' + row.region + '\', \'' + row.key + '\', \'' + row.value + '\')">@Html.Raw(ActionButton.Edit.Replace("\'","\""))<span class="title" style="margin-top: 3px; margin-left: 10px;">@Html.Raw(Resource.Edit)</span></button>' +
                                '</div></div>';
                        }
                    }
                ]
            });
        }

        function edit(reg, key, val) {
            $('#Region').val(reg);
            $('#Key').val(key);
            $('#Value').val(val);
            $('#mdl_edit').modal('toggle');
        }

        function save_changes() {
            $.post('@Url.Action("_EditAppSetings", "Configuration")', {
                Region: $('#Region').val(),
                Key: $('#Key').val(),
                Value: $('#Value').val()
            }, function (data) {
                handle_success(data, SubmitPathType.RELOAD, "");
            });
        }
    </script>
}