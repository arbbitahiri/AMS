@using AMS.Areas.Authorization.Models.Menu
@model Create

<div class="modal-header">
    <h5 class="modal-title">@Resource.AddMenu</h5>
    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
    </button>
</div>

<form asp-action="Create" asp-controller="Menu" asp-area="Authorization" id="frm_CreateMenu" method="post" data-ajax="true" data-ajax-method="post" data-ajax-success="on_success_menu" role="form">
    <div class="modal-body pb-0">
        @Html.AntiForgeryToken()

        <div class="row form-group">
            <div class="col-md-4">
                <label asp-for="NameSq" class="required"></label>
                <input asp-for="NameSq" class="form-control" />
                <span asp-validation-for="NameSq" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="NameEn" class="required"></label>
                <input asp-for="NameEn" class="form-control" />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Controller" class="required"></label>
                <input asp-for="Controller" class="form-control" />
                <span asp-validation-for="Controller" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-4">
                <label asp-for="Action" class="required"></label>
                <input asp-for="Action" class="form-control" />
                <span asp-validation-for="Action" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="OrdinalNumber" class="required"></label>
                <input asp-for="OrdinalNumber" type="number" class="form-control" />
                <span asp-validation-for="OrdinalNumber" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="ClaimPolicy" class="required"></label>
                <input asp-for="ClaimPolicy" class="form-control" />
                <span asp-validation-for="ClaimPolicy" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-4">
                <label asp-for="Icon" class="required"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="OpenFor" class="required"></label>
                <input asp-for="OpenFor" class="form-control" />
                <span asp-validation-for="OpenFor" class="text-danger"></span>
            </div>
            <div class="col-md-4 d-flex flex-column pl-5">
                <label asp-for="HasSubMenu" class="required">@Resource.HasSubMenu</label>
                <div class="d-inline">
                    <input asp-for="HasSubMenu" id="has_submenu" style="cursor: pointer;" type="checkbox">
                    <label asp-for="HasSubMenu" id="lbl_submenu" onclick="change_check(this)"></label>
                </div>
                <span asp-validation-for="HasSubMenu" class="text-danger"></span>
            </div>
        </div>
        @*<div class="row form-group">
            <div class="col-md-6">
                <label asp-for="TagsSQ" class="required"></label>
                <input asp-for="TagsSQ" data-role="tagsinput" class="tagify form-control" />
                <span asp-validation-for="TagsSQ" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="TagsEN" class="required"></label>
                <input asp-for="TagsEN" data-role="tagsinput" class="tagify form-control" />
                <span asp-validation-for="TagsEN" class="text-danger"></span>
            </div>
        </div>*@
    </div>
    <div class="modal-footer modal-footer-uniform w-full justify-content-between">
        <button type="button" class="btn btn-bold btn-pure btn-secondary" data-bs-dismiss="modal">@Resource.Close</button>
        <button type="submit" class="btn btn-bold btn-pure btn-primary float-right">@Resource.Add</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        var form = $('#frm_CreateMenu');
        form.removeData('validator');
        form.removeData('unobtrusiveValidation');
        $.validator.unobtrusive.parse(form);

        $('#lbl_submenu').text('');

        $('#TagsSQ').tagsinput({
            typeaheadjs: {
                displayKey: 'name',
                valueKey: 'name',
                source: citynames.ttAdapter()
            }
        });

        $('#TagsEN').tagsinput({
            typeaheadjs: {
                displayKey: 'name',
                valueKey: 'name',
                source: citynames.ttAdapter()
            }
        });
    });

    function change_check(e) {
        if($('#has_submenu').is(":checked")) {
            $('#has_submenu').removeAttr('checked');
        } else {
            $('#has_submenu').attr('checked', true);
        }
    }

    function on_success_menu(data) {
        handle_success(data, SubmitPathType.RELOAD, "");
    }
</script>
