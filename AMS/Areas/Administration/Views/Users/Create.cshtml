@using AMS.Areas.Administration.Models.Users
@model Create
@inject IDDLRepository repo
@{
    UserModel user = (UserModel)ViewData["User"];
    ViewData["Title"] = Resource.User;

    var error = new ErrorVM() { Status = ErrorStatus.Info, Title = Resource.Info, Description = Resource.RolesAddThroughList, Dismissible = true };
}

<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">@Resource.AddUser</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Users" asp-area="Administration" id="frm_create_user" enctype="multipart/form-data" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group row mb-15">
                <div class="col-sm-12 d-flex justify-content-center align-items-center">
                    <div class="image-input image-input-outline shadow" id="kt_profile_avatar"
                            style="background-image: url('../../../../assets2/media/users/default.jpg')">
                        <div class="image-input-wrapper"
                                style="background-image: url('../../../../assets2/media/users/default.jpg'); background-position: center center;">
                        </div>
                        <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow"
                                data-action="change" data-toggle="tooltip" title="" data-original-title="@Resource.Change">
                            <i class="fa fa-pen icon-sm text-muted"></i>
                            <input type="file" asp-for="ProfileImage" />
                            <input type="hidden" name="profile_avatar_remove">
                        </label>
                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="" data-original-title="@Resource.Delete">
                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                        </span>
                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="" data-original-title="@Resource.Remove">
                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                        </span>
                    </div>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 form-group">
                    <label asp-for="PersonalNumber" class="required"></label>
                    <input asp-for="PersonalNumber" class="form-control"/>
                    <span asp-validation-for="PersonalNumber" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Firstname" class="required"></label>
                    <input asp-for="Firstname" class="form-control"/>
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Lastname" class="required"></label>
                    <input asp-for="Lastname" class="form-control"/>
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="PhoneNumber" class="required"></label>
                    <input asp-for="PhoneNumber" class="form-control"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Email" class="required"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Password" class="required"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="ConfirmPassword" class="required"></label>
                    <input asp-for="ConfirmPassword" class="form-control"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Language" class="required"></label>
                    <select asp-for="Language" asp-items="repo.Languages()" class="form-control select2"></select>
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="Roles"></label>
                    <select asp-for="Roles" asp-items="await repo.Roles(user.Language)" multiple class="form-control select2"></select>
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>
                <div class="col-md-9">
                    <partial name="_AlertMessage" model="error"/>
                </div>
            </div>

            <div class="d-flex justify-content-end border-top mt-5">
                <input type="submit" class="btn btn-primary btn-pure font-weight-bolder text-uppercase mt-2 btn-lg" value="@Resource.Register" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.validator.setDefaults({ ignore: '' });
            var form = $('#frm_create_user');
            form.removeData('validator');
            form.removeData('unobtrusiveValidation');
            $.validator.unobtrusive.parse(form);

            $('#PhoneNumber').inputmask("mask", {
                mask: "+(999) 99 999-999",
                removeMaskOnSubmit: true,
                autoUnmask: true
            });

            $(".select2").select2({
                width: "100%",
                language: {
                    noResults: function () {
                        return '@Html.Raw(Resource.NoResultsFound)';
                    },
                }
            });

            var avatar = new KTImageInput('kt_profile_avatar');

            avatar.on('cancel', function (imageInput) {
                Swal.fire({
                    icon: 'success',
                    title: '@Html.Raw(Resource.Success)',
                    text: '@Html.Raw(Resource.ImageChangedSuccess)',
                    timer: 1500,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            });

            avatar.on('change', function (imageInput) {
                Swal.fire({
                    icon: 'success',
                    title: '@Html.Raw(Resource.Success)',
                    text: '@Html.Raw(Resource.ImageChangedSuccess)',
                    timer: 1500,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            });

            avatar.on('remove', function (imageInput) {
                Swal.fire({
                    icon: 'success',
                    title: '@Html.Raw(Resource.Success)',
                    text: '@Html.Raw(Resource.ImageChangedSuccess)',
                    timer: 1500,
                    timerProgressBar: true,
                    showConfirmButton: false
                });
            });
        });
    </script>
}
