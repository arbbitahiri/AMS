                                </g>
                            </svg>
                        </span>
                    </div>
                </div>
                <div id="kt_functions_list" class="collapse" data-parent="#kt_functions">
                    <div class="card-body">
                        @foreach (var function in Model.Functions)
                        {
                            <div class="my-2 ml-2" style="display: block; white-space: nowrap;">
                                <div class="text-hover-primary cursor-pointer" onclick="get_function(this, '@function.Name', '@function.Schema')">@function.Schema.@function.Name</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-solid my-2"></div>
        <div class="accordion accordion-light accordion-svg-toggle mb-5" id="kt_procedures">
            <div class="card">
                <div class="card-header">
                    <div class="card-title collapsed" data-toggle="collapse" data-target="#kt_procedures_list">
                        <div class="card-label d-flex align-items-center">
                            <i id="kt_icon_procedure" class="icon-xl fas fa-stream mr-5"></i> @Resource.Procedures
                        </div>
                        <span id="kt_svg_procedure" class="svg-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
