                            </svg>
                        </span>
                    </div>
                </div>
                <div id="kt_tables_columns_list" class="collapse" data-parent="#kt_tables_columns">
                    <div class="card-body">
                        @foreach (var table in Model.Tables)
                        {
                            <div class="my-3 ml-3" style="display: block; white-space: nowrap;">
                                <div class="text-hover-primary cursor-pointer" onclick="get_columns(this, '@table.Name', '@table.Schema')"><i class="ki ki-plus"></i> @table.Schema.@table.Name</div>
                                <div id="kt_columns" class="my-3" style="display:none"></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="separator separator-solid my-2"></div>
        <div class="accordion accordion-light accordion-svg-toggle mb-5" id="kt_functions">
            <div class="card">
                <div class="card-header">
                    <div class="card-title collapsed" data-toggle="collapse" data-target="#kt_functions_list">
                        <div class="card-label d-flex align-items-center">
                            <i id="kt_icon_function" class="icon-xl fab fa-steam-square mr-5"></i> @Resource.Functions
                        </div>
                        <span id="kt_svg_function" class="svg-icon">
