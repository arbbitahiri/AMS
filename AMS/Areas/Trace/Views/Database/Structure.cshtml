                                </g>
                            </svg>
                        </span>
                    </div>
                </div>
                <div id="kt_procedures_list" class="collapse" data-parent="#kt_procedures">
                    <div class="card-body">
                        @foreach (var procedure in Model.Procedures)
                        {
                            <div class="my-2 ml-2" style="display: block; white-space: nowrap;">
                                <div class="text-hover-primary cursor-pointer" onclick="get_procedure(this, '@procedure.Name', '@procedure.Schema')">@procedure.Schema.@procedure.Name</div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function get_columns(e, name, schema) {
        if ($(e).parent().find('#kt_columns').css('display') == "none") {
            $(e).parent().find('#kt_columns').load('@Url.Action("GetColumns")?name=' + name + '&schema=' + schema, function () {
                $(e).parent().find('#kt_columns').show(500);
                $(e).find('i').removeClass('ki-plus').addClass('ki-minus');
            });
        } else {
            $(e).parent().find('#kt_columns').hide(500);
            $(e).find('i').removeClass('ki-minus').addClass('ki-plus');
        }
    }

    function get_function(e, name, schema) {
        show_loading();
        $.get('@Url.Action("GetFunction")?name=' + name + '&schema=' + schema, function (data) {
            sql_editor.setValue(data);
            hide_loading();
        });
    }

    function get_procedure(e, name, schema) {
        show_loading();
        $.get('@Url.Action("GetProcedure")?name=' + name + '&schema=' + schema, function (data) {
            sql_editor.setValue(data);
            hide_loading();
        });
    }
</script>
