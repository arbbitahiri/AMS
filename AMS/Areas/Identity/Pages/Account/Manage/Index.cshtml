@page
@model IndexModel
@using AMS.Data.Core
@{
    Layout = "_Layout";
    ViewData["Title"] = Resource.Profile;
    ViewData["ActivePage"] = ManageNavPages.Index;
    ApplicationUser user = (ApplicationUser)ViewData["InternalUser"];
}

<div class="card card-custom card-stretch">
    <div class="card-header py-3">
        <div class="card-title align-items-start flex-column">
            <h3 class="card-label font-weight-bolder text-dark">@Resource.PersonalData</h3>
            <span class="text-muted font-weight-bold font-size-sm mt-1">@Resource.UpdatePersonalData</span>
        </div>
        <div class="card-toolbar">
            <button type="button" class="btn btn-primary mr-2" onclick="submit_index()">@Resource.Save</button>
            <button type="button" class="btn btn-secondary" onclick="$('#frm_personal_info').trigger('reset')">@Resource.Cancel</button>
        </div>
    </div>
    <div class="card-body">
        <form id="frm_personal_info" method="post" enctype="multipart/form-data" class="form">
            <div class="row form-group">
                <label asp-for="Input.ProfileImage" class="col-xl-3 col-lg-3 col-form-label">@Resource.ProfileImage</label>
                <div class="col-lg-9 col-xl-6">
                    <div class="image-input image-input-outline shadow" id="kt_profile_avatar"
                         style="background-image: url('../../../../assets2/media/users/default.jpg')">
                        <div class="image-input-wrapper"
                            style="background-image: url(@Url.Content(Model.Input.ImagePath ?? "../../../../assets2/media/users/default.jpg")); background-position: center center;">
                        </div>
                        <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow"
                            data-action="change" data-toggle="tooltip" title="" data-original-title="@Resource.Change">
                            <i class="fa fa-pen icon-sm text-muted"></i>
                            <input type="file" asp-for="Input.ProfileImage"/>
                            <input type="hidden" name="profile_avatar_remove">
                        </label>
                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="" data-original-title="@Resource.Delete">
                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                        </span>
                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="" data-original-title="@Resource.Remove">
                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Input.ProfileImage" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="Input.FirstName" class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-6">
                    <input asp-for="Input.FirstName" type="text" class="form-control form-control-lg form-control-solid" placeholder="@Resource.Firstname">
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="Input.LastName" class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-6">
                    <input asp-for="Input.LastName" type="text" class="form-control form-control-lg form-control-solid" placeholder="@Resource.Lastname">
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-group">
                <label asp-for="Input.PhoneNumber" class="col-xl-3 col-lg-3 col-form-label"></label>
                <div class="col-lg-9 col-xl-6">
                    <div class="input-group input-group-lg input-group-solid">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="la la-phone"></i>
                            </span>
                        </div>
                        <input asp-for="Input.PhoneNumber" type="text" class="form-control form-control-lg form-control-solid">
                    </div>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();

            $('#Input_PhoneNumber').inputmask("mask", {
                "mask": "+(999) 99 999-999",
                removeMaskOnSubmit: true,
                autoUnmask: true
            });

            var avatar4 = new KTImageInput('kt_profile_avatar');

            avatar4.on('cancel', function (imageInput) {

            });

            avatar4.on('change', function (imageInput) {

            });

            avatar4.on('remove', function (imageInput) {

            });
        });

        function submit_index() {
            show_loading();
            $('#frm_personal_info').trigger('submit');
        }
    </script>
}
